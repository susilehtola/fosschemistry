&CONTROL
  calculation='bands'
  prefix='zns'
/
&SYSTEM
  space_group=216 ! Space group number
  a=5.4467162 ! OPTIMIZED lattice parameter a in angstroms
  nat=2    ! Number of atoms in the asymmetric unit
  ntyp=2   ! Number of different atom types. Here, Zn and S.
  ecutwfc=40  ! Kinetic energy cutoff for wavefunctions (Ry)
  ecutrho=200 ! Kinetic energy cutoff for charge density and potential (Ry)
  nbnd=20 ! 13 valence bands (26 electrons), 7 empty bands 
/
&ELECTRONS
/
&IONS
/
&CELL
/
ATOMIC_SPECIES
  Zn 65.38 zn_pbe_v1.uspp.F.UPF
  S  32.065 s_pbe_v1.4.uspp.F.UPF
! ATOMIC_POSITIONS are actually read from zns.save generated by the geometry optimization
ATOMIC_POSITIONS crystal_sg
Zn 0.00000 0.00000 0.00000
S  0.25000 0.25000 0.25000
! Path Gamma-X–W–K–Gamma–L–U–W–L–K (Setyawan-Curtarolo path) 
K_POINTS crystal_b
10
0.0000000000	0.0000000000	0.0000000000 25 ! Gamma
0.5000000000	0.0000000000	0.5000000000 25 ! X
0.5000000000	0.2500000000	0.7500000000 25 ! W
0.3750000000	0.3750000000	0.7500000000 25 ! K
0.0000000000	0.0000000000	0.0000000000 25 ! Gamma
0.5000000000	0.5000000000	0.5000000000 25 ! L
0.6250000000    0.2500000000    0.6250000000 25 ! U
0.5000000000    0.2500000000    0.7500000000 25 ! W
0.5000000000    0.5000000000    0.5000000000 25 ! L
0.3750000000    0.3750000000    0.7500000000 25 ! K

